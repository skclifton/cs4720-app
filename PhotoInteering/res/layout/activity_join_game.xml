<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map"
    android:paddingLeft="@dimen/pad300dp"
    android:paddingRight="@dimen/pad300dp"
    android:paddingTop="@dimen/pad20dp"
    android:showDividers="beginning"
 >

    <TableRow
        android:id="@+id/joinTableRowTitles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/dark_cream"
        android:padding="@dimen/pad10dp" >

        <TextView
            android:id="@+id/gameIDTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/game_ID"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/gray" 
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/gameStarterTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/game_starter"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/gray"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/joinGameLabel"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/gray" 
            android:layout_weight="1"/>

    </TableRow>

    <ScrollView
        android:id="@+id/joinTableScrollView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/pad20dp" >

        <TableLayout
            android:id="@+id/joinScrollViewTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:stretchColumns="yes" >
        </TableLayout>

    </ScrollView>

</TableLayout>